{
    "manifest_version": 3,
    "name": "Open in (GitHub) Dev!",
    "description": "Conveniently open GitHub repos in GitHub.dev via right-click.",
    "version": "1.0.1",
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "background": {
        "scripts": [
            "dist/index.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{dd72f992-a1fd-481b-9844-c58771804925}"
        }
    },
    "icons": {
        "16": "assets/logo/logo-16.png",
        "32": "assets/logo/logo-32.png",
        "48": "assets/logo/logo-48.png",
        "96": "assets/logo/logo-96.png",
        "128": "assets/logo/logo-128.png"
    },
    "action": {
        "default_popup": "src/popup/index.html",
        "default_title": "Open in GitHub Dev",
        "default_icon": {
            "16": "assets/logo/logo-16.png",
            "32": "assets/logo/logo-32.png",
            "48": "assets/logo/logo-48.png",
            "96": "assets/logo/logo-96.png",
            "128": "assets/logo/logo-128.png"
        }
    }
}